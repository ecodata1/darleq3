if(!exists("meta") || is.null(meta)) meta <- packageDescription("darleq3")

citHeader("To cite package 'darleq3' in publications use:")

citEntry(entry="Manual",
	title ="darleq3: Diatom-based water quality assessment",
	authors = personList(as.person("Steve Juggins"), as.person("Martyn Kelly")),
	year = 2017,
	note = paste("R package version", meta$Version),
	textVersion =	paste("Juggins, S. and Kelly, M.G. (2017) ",
  "darleq3: Diatom-based water quality assessment, R package version (",
	meta$Version, ")."," (http://cran.r-project.org/package=darleq3).", sep="")
)
